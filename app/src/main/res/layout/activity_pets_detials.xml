<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/back__pets">


    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#000000"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageViewPetDetails"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/baseline_pets_24"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <!-- Centering container for text and buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#EADDCA"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewNameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="Pet Name"
            android:layout_marginBottom="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Pet Type"
            android:layout_marginBottom="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewAgeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Age: 1.5 years"
            android:layout_marginBottom="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewColorDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Color: Gray"
            android:layout_marginBottom="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewIsAdoptedDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Is Adopted: No"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Container for buttons in one row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/contact_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Contact"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                 />

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Back"
                android:layout_gravity="center"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_logout_24"
                android:contentDescription="TODO" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
